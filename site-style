<style> /*this is a import font from google fonts */
@import url('https://fonts.googleapis.com/css?family=Elsie+Swash+Caps');
@import url('https://fonts.googleapis.com/css?family=Clicker+Script');

</style>


/* this is a comment */
/* css syntax
selectors {property:value;}*/

/* type selector */
p /*select all <p> */{font-size: 16px;
line-height: 18px;}

figcaption {
 font-weight: normal;
 font-size: 10px;
 line-height: 16px;
 font-family: 'Elsie Swash Caps', cursive;
 color: #098765;
 text-align: right;

}

/*class selectors can be applied to many elements */

.milk-text {/* this will select elements with class="milk-text" */
font: bold 2.6em 'Elsie Swash Caps', cursive;
color: #000000;
text-shadow: 0 2px 3px #000;
}

/* id selector - applies to only one unique element per page */
#logo{/* this will select elements with id="logo"*/
background: aqua;
}

/* descendent selector */
#logo h1 { /* will only style h1 is inside element with id="logo" */
font-family: 'Clicker Script', cursive;
}

#logo h2 {
  font-family: 'Elsie Swash Caps', cursive;
}

/* psuedo class selectors */

#details a:link, #details a:visited {
  color: black;
  text-decoration: none;
}

#details a:hover{
  color: black;
  text-decoration: underline;
}

#details a:active{
  color: red;
}
